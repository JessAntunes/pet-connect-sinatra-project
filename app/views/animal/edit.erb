<h4>Enter Animals Information Below:</h4>
<br>
<form action="/animal/<%= @animal.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<p>Name: <input type="text" name="name" value="<%=@animal.name%>"></p>
<p>Species: <input type="text" name="species" value="<%=@animal.species%>"></p>
<br>
<label>Gender:</label>
  <select name="gender" class="browser-default">
    <option value="" disabled selected>Choose your option</option>
    <option name="gender" value="male">male</option>
    <option name="gender" value="female">female</option>
  </select>
  <br> 
<label>Age:</label>
  <select name="age" class="browser-default">
    <option value="" disabled selected>Choose your option</option>
    <option name="age" value="baby">baby</option>
    <option name="age" value="young">young</option>
    <option name="age" value="adult">adult</option>
    <option name="age" value="senior">senior</option>
  </select>
  <br>
<label>Temperment:</label>
  <select name="temperment" class="browser-default">
    <option value="" disabled selected>Choose your option</option>
    <option name="temperment" value="mild">mild</option>
    <option name="temperment" value="playful">playful</option>
    <option name="temperment" value="anxious">anxious</option>
  </select>
  <br>
<label>Kid-Friendly:</label>
  <select name="kid_friendly" class="browser-default">
    <option value="" disabled selected>Choose your option</option>
    <option name="kid_friendly" value=true>yes</option>
    <option name="kid_friendly" value=false>no</option>
  </select>
  <br> 
<label>Pet-Friendly:</label>
  <select name="pet_friendly" class="browser-default">
    <option value="" disabled selected>Choose your option</option>
    <option name="pet_friendly" value=true>yes</option>
    <option name="pet_friendly" value=false>no</option>
  </select>
  <br> 
  <input class="waves-effect light-blue lighten-2 btn" type="submit" value="Submit">
</form>